    def setAccNdate(self, txt = []):
        NameToValue = {}
        for line in txt[1:]:

            str = ' '.join(line.split())
            phanzi=re.compile(u'[\u4e00-\u9fa5]+');

            res = phanzi.findall(str)
            nums = re.findall(r'(\d+)', str)


            index = 0
            for name in res:
                NameToValue[name] = nums[index]
                index += 1
        self.__account = NameToValue['账户']
